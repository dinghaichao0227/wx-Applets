.order {
  height: 100vh;
  background-color: #e7e7e7;
  padding-bottom: 70px;
}
.header {
  display: flex;
  justify-content: space-between;
  padding:0px 10px; 
  width: 95vw;
  height: 70px;
  background-color: #fff;
  border-bottom:  dashed rgb(224, 179, 179);

}
.address {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
