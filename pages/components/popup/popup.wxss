/* pages/components/popup/popup.wxss */
.fui-custom__wrap {
  width: 100%;
  height: 520px;
  display: flex;
  flex-direction: column;
}
.fui-icon__close {
	position: absolute;
	top: 24rpx;
	left: 24rpx;
}
.box {
  width: 100%;
  display: flex;
  padding: 15px;
}
.box-logo {
  width: 50px;
  height: 80px;
  margin-left: 50px;
}
.box-img {
  width: 100%;
  height: 100%;
}
.box-right {
  margin-left: 30px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.box-title {
  font-size: 19px;
}
.box-money {
  color: red;
  font-weight: 600;
}
.class {
  padding: 10px;
  font-size: 18px;
}
.scroll {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin: 20px 0px;
  height: 200px;
  width: 100%;
  /* overflow-y: auto;
  overflow-x: hidden; */
}
.scroll-commodity {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 110px;
  height: 60px;
  background-color: #dadada;
  padding-top: 5px;
  margin: 10px 0px;
  border-radius: 5px;

}
.scroll-commodity:hover {
  background-color: red;
}
.commodity-lable {
  display: inline-block;
  font-size: 15px;
  overflow: hidden;
  width: 120px;
  text-align: center;
  height:20px;
}
.commodity-title {
  font-size: 14px;
  color: #808080;
}
.btn {
  background-color: red;
  color: #fff;
  white-space:nowrap;

}
