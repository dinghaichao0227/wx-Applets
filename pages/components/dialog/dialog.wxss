/* pages/components/newPages/dialog/dialog.wxss */
.wx-popup {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
}
.popup-container {
  position: absolute;
  left: 50%;
  top: 40%;
  width: 80%;
  max-width: 600rpx;
  border: 2rpx solid #ccc;
  border-radius: 20rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%); 
  overflow: hidden;
  background: #fff;
}
.wx-popup-title {
  width: 100%;
  padding: 20rpx;
  text-align: center;
  font-size: 40rpx;
  border-bottom: 2rpx solid #ccc;
}
.wx-popup-con {
  margin: 60rpx 10rpx;
  text-align: center;
  height: 150px;
}
.wx-popup-btn {
  background-color: red;
  display: flex;
  justify-content: space-between;
  /* margin-bottom: 4rpx; */
}
.wx-popup-btn text {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 30%;
  height: 80rpx;
  border: 2rpx solid #ccc;
  border-radius: 88rpx;
}
.fui-custom__wrap {
	width: 100%;
	height: 520rpx;
  display: flex;
  flex-direction: column;
}
.header {
  display: flex;
  /* display: inline-block; */
  width: 90%;
  height: 30px;
  border-bottom: 1px solid #ccc;
  justify-content: space-between;
  padding: 10px 20px;
}